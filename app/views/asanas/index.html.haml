.container.mt-5
  .row.card-deck
    - @asanas.each do |asana|
      .col-12.col-md-6.col-lg-4.mt-4
        .card.asanas
          .card-body
            .media
              / %i.align-self-center.mr-4.fas.fa-child.fa-4x
              = link_to asana_path(asana) do
                .media-body
                  %h5.mt-0= asana.sanskrit_name
                  %ul
                    - if asana.chakras.present?
                      %li.text-muted= asana.chakras.map(&:name).first(3).join(", ")
                    - if asana.benefits.present?
                      %li.text-muted= asana.benefits.map(&:name).first(3).join(", ")
                    - if asana.body_parts.present?
                      %li.text-muted= asana.body_parts.map(&:name).first(3).join(", ")
                  = link_to "View more", asana_path(asana)
